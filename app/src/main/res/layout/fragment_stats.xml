<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:background="@color/light_purple"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <FrameLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/light_grey">

        <ImageView
            android:id="@+id/date_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="55dp"
            android:layout_gravity="center|start"
            android:src="@drawable/ic_keyboard_arrow_left"/>

        <TextView
            android:id="@+id/stats_date"
            android:text="month"
            android:textSize="18sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/date_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="55dp"
            android:layout_gravity="center|end"
            android:src="@drawable/ic_keyboard_arrow_right"/>

    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/card_background_grey"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"
        android:layout_marginTop="100dp"
        android:layout_gravity="top"
        android:alpha="0.2"/>

    <FrameLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/stats_section_background"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Monthly mood chart"
            android:layout_gravity="top|left"
            android:layout_marginLeft="10dp"/>

        <com.jjoe64.graphview.GraphView
            android:layout_marginTop="20dp"
            android:id="@+id/overview_graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>




</FrameLayout>