<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            android:text="How are you?"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="40dp"/>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp">

            <ImageView
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_date_range"/>

            <TextView
                android:textColor="@color/green"
                android:layout_weight="3"
                android:id="@+id/tv_display_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_arrow_drop_down"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_access_time_black_24dp"/>

            <TextView
                android:textColor="@color/green"
                android:layout_weight="3"
                android:id="@+id/tv_display_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"/>

            <ImageView
                android:layout_weight="1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_drop_down"/>

        </LinearLayout>
        <FrameLayout
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="115dp">

            <View
                android:layout_weight="1"
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_gravity="center|start"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="0dp"/>
            <View
                android:layout_weight="1"
                android:layout_width="55dp"
                android:layout_height="1dp"
                android:background="@color/green"
                android:layout_gravity="center|end"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="0dp"/>


        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_entry_point"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/small_circle"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="38dp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_seek_bar_value"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:textAlignment="center"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="0"/>

        <SeekBar
            android:id="@+id/sb_entry_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center|center_horizontal"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/feo_next_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="24dp"
        android:layout_gravity="end|bottom"
        android:background="@color/black"/>

</FrameLayout>